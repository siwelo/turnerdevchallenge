@model IEnumerable<turnerdevchallenge.Models.Title>

@{
    ViewBag.Title = "TitleSearchList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TitleSearchList</h2>


<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TitleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TitleNameSortable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TitleTypeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProcessedDateTimeUTC)
        </th>
        <th>
           
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TitleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TitleNameSortable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TitleTypeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProcessedDateTimeUTC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StoryLines)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.TitleId }) |
        </td>
    </tr>
}

</table>
