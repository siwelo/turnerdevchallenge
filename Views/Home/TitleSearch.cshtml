@model IEnumerable<turnerdevchallenge.Models.Title>

@{
    ViewBag.Title = "Title Search Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Title Search Results</h2>


<table>
    <tr>
        <th>
            Title Name
        </th>
        <th>
            Release Year
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TitleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseYear)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.TitleId })
        </td>
    </tr>
}

</table>
